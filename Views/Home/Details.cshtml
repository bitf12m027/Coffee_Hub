@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Coffee_Hub.Models
@model menu
<style>
    p {
        text-align: start;
        font-size: 18px;
        font-weight: 400;
    }
    h3 {
        color: #bfcb75;
        font-size: 20px;
        font-weight: bolder;
    }
</style>
<h2 style="color: #bfcb75; text-align:center">Details</h2>
<form action="~/Home/OrderOne" method="post">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-1">
            <img src="../Content/Images/@(Model.name + ".jpg")" />
        </div>
        <div class="form-group col-lg-4">
            <h3>Name:</h3> <p>@Model.name</p>
            <h3>Price:</h3> <p>@Model.price</p>
            <h3>Details:</h3> <p>@Model.details</p>
        </div>
        <div class="form-group col-lg-4 pull-right">
            <input type="hidden" value="@Model.Id" name="id" />
            <input type="submit" value="Order Now" class="btn btn-primary" style="background-color:brown" />
        </div>
    </div>
</form>