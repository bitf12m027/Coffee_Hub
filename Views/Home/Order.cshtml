
@using Coffee_Hub.Models
@model List<menu>

<div>
    <img src="../Content/Images/headline-order.jpg" />
</div>

<div>
    <h1 style="color: #bfcb75; text-align:center">Give Order</h1><br />
    @if ((int)Session["orderSuccessfull"] != 0)
    {
        <div class="alert alert-success col-lg-5 col-lg-offset-1" role="alert" style="font-weight:bolder; font-size:16px;">Order Succesfull!<br />Your Order Id is @Session["OrderId"]</div>
    }
    @using ( Html.BeginForm("AddOrder", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">    
                    @Html.Label("Name", new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="name" name="name" required placeholder="Full Name">
                        
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" id="email" name="email" required placeholder="Email">
                    </div>
                </div>
                    
                <div class="form-group">
                    <label for="add" class="col-sm-4 control-label">Address</label>
                    <div class="col-sm-6">
                        
                        @Html.TextBox("address", "",new { @class = "form-control", placeholder = "Address" })
                    </div>
                </div>
                <div class="col-lg-offset-2">
                    <h2 style="color: #bfcb75; text-align:center">Select Coffee</h2>
                        
                    @foreach (menu ob in Model)
                    {
                        <div class="form-group">
                            <label for="add" class="col-sm-4 control-label">@ob.name</label>
                            <div class="col-sm-4">
                                <select class="form-control" id="coffee" name="menu">
                                    @for (int i = 0; i <= 10; i++)
                                    {
                                        <option value=@i>@i</option>
                                    }

                                        
                                </select>
                            </div>
                        </div>
                    }
                        
                </div>
                
                <div class="form-group">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-4">
                        <input type="submit" class="btn btn-primary" style="background-color:brown" value="Order Now">
                    </div>
                </div>
            </div>
        </div>
   
    }
</div>

