@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js"></script>
</head>
<body style="background: repeat; opacity:0.5 ;background-image: url(../Content/Images/bg-body.jpg); color: brown; font-family: 'open_sansregular';">
    
    <div class="col-lg-4 col-lg-offset-4" style="padding-top:3% ;background-color:antiquewhite;padding:0.3%; margin-top:8% ">
        <img style="padding: 0.5%;" src="~/Content/Images/logo.jpg" alt="logo" />
        <h1 style="text-align: center; font-size: large; font-weight: bolder">Login</h1><br />
        <form class="form-horizontal" action="~/Admin/Validate" method="post">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <label for="UserName" class="col-sm-4 control-label" style="font-size: large; font-weight: bolder">User Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="UserName" name="Name" style="border:solid;font-size:large" required placeholder="User Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pass" class="col-sm-4 control-label" style="font-size:large" font-weight:bolder">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="pass" name="password" style="border:solid;font-size:large" required placeholder="Paaword">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"></label>
                        <div class="col-sm-6">
                            <input type="submit" class="btn btn-primary" style="background-color: brown; font-size: large; border: solid; height: 45px; width: 150px; text-align:center" value="Login">
                        </div>
                    </div>
                    @if ((int)Session["valid"] == 0)
                    {
                        <div class="alert alert-warning" role="alert" style="font-weight:bolder; font-size:16px; color:darkred; align-content:center;">Invalid User Name or Password!</div>
                    }
                </div>
            </div>
        </form>
    </div>
</body>
</html>
