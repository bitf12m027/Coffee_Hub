@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2 style="color: #bfcb75; text-align: center">Menu</h2>

<form class="form-horizontal" action="~/Admin/AddMenu" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="name" class="col-sm-4 control-label">Name</label>
               
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="name" name="name" style="border:groove" required placeholder="Item Name">
                </div>
            </div>
            <div class="form-group">
                <label for="price" class="col-sm-4 control-label">Price</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="price" name="price" style="border:groove" required placeholder="Price">
                </div>
            </div>
            <div class="form-group">
                <label for="detail" class="col-sm-4 control-label">Details</label>
                <div class="col-sm-6">
                    <textarea class="form-control" id="detail" name="details" style="border:groove" required placeholder="Details"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="photo" class="col-sm-4 control-label">Photo:</label>
                <div class="col-sm-6">
                    <input type="file" name="photo" id="photo" required />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label"></label>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-primary" style="background-color:brown" value="Submit">
                </div>
            </div>
        </div>
    </div>
</form>