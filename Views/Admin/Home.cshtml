@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@using Coffee_Hub.Models
@model List<order>
<style>
    p{
        font-size:large;
    }
</style>
<h2 style="color: #bfcb75; text-align: center">Pending Orders</h2>
<div>
    
    @foreach (order order in Model)
    {
        <div class="well well-lg col-lg-5 col-md-offset-3">
            <form class="form-horizontal" action="../Admin/Deliver" method="post">
                <p>Order Id : @order.Id </p>
                <p>Name : @order.name </p>
                <p>Email : @order.email </p>
                <p>Address : @order.address</p>
                <p>Status: Pending</p>
                @foreach (var orderMenu in order.OrderMenus)
                {
                    <p>@orderMenu.menu.name : @orderMenu.quantity</p>
                }
                <input type="hidden" name="OrderId"  value="@order.Id" />
                <input class="btn btn-primary pull-right" style="background-color:brown" type="submit" value="Deliver" />
            </form>
        </div>  
    }
</div>